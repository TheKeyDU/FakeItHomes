<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布订单"
        android:id="@+id/textView5" />
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:id="@+id/cardView5"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寄件人"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="姓名"
                android:layout_marginStart="19dp"
                android:layout_marginTop="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="电话"
                android:layout_alignBaseline="@+id/button"
                android:layout_alignBottom="@+id/button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="33dp" />
            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="地址"
                android:layout_below="@+id/button2"
                android:layout_alignStart="@+id/button"
                android:layout_marginTop="31dp" />
            <Button
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="地址簿"
                android:layout_alignBaseline="@+id/button3"
                android:layout_alignBottom="@+id/button3"
                android:layout_alignStart="@+id/button2" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/cardView5"
        android:layout_alignStart="@+id/cardView5"
        android:id="@+id/cardView6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="183dp">
            <Button
                android:id="@+id/button5"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="姓名"
                android:layout_marginStart="11dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/button6"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="电话"
                android:layout_alignBaseline="@+id/button5"
                android:layout_alignBottom="@+id/button5"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="33dp" />
            <Button
                android:id="@+id/button7"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="地址"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/button6"
                android:layout_alignStart="@+id/button6" />
            <Button
                android:id="@+id/button8"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="地址簿"
                android:layout_alignBaseline="@+id/button7"
                android:layout_alignBottom="@+id/button7"
                android:layout_alignStart="@+id/button5" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:text="物品类型"
        android:id="@+id/button9"
        android:layout_below="@+id/cardView6"
        android:layout_alignStart="@+id/cardView5" />
    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:text="类型"

        android:layout_marginStart="24dp"
        android:layout_below="@+id/cardView6"
        android:layout_toEndOf="@+id/button9"
        android:id="@+id/button11" />
    <Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:text="上传照片"
    android:textSize="9dp"
        android:id="@+id/button10"
        android:layout_above="@+id/button13"
        android:layout_alignStart="@+id/cardView6" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="我已同意服务条款"
        android:textSize="9dp"
        android:layout_alignBaseline="@+id/button10"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignParentEnd="true"
        android:id="@+id/button12" />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="发布订单"
        android:textSize="9dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button11"
        android:id="@+id/button13" />
</RelativeLayout>
