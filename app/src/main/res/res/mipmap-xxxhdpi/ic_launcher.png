<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.dqj.myapplication.Main4Activity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewDemo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/nv_bg"
        android:elevation="10dp"
        android:translationX="20dp"
        android:translationY="20dp"
        android:translationZ="20dp"
android:paddingTop="20dp"
        app:cardCornerRadius="10dp">


    </android.support.v7.widget.CardView>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <SeekBar
        android:id="@+id/seekele"
        android:layout_width="250dp"
        android:layout_height="60dp"
        />

    <TextView
        android:id="@+id/textViewele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android:elevation"
        android:layout_gravity="center"
        android:textSize="12dp"/>
    />


</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/seekcor"
            android:layout_width="250dp"
            android:layout_height="60dp"
            />

        <TextView
            android:id="@+id/textViewcor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cardCornerRadius"
            android:layout_gravity="center"
            android:textSize="12dp"/>
        />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/seektx"
            android:layout_width="250dp"
            android:layout_height="60dp"
            />

        <TextView
            android:id="@+id/textViewtx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translationX"
            android:layout_gravity="center"
            android:textSize="12dp"/>
        />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/seektY"
            android:layout_width="250dp"
            android:layout_height="60dp"
            />

        <TextView
            android:id="@+id/textViewtY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translationY"
            android:layout_gravity="center"
            android:textSize="12dp"/>
        />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/seektZ"
            android:layout_width="250dp"
            android:layout_height="60dp"
            />

        <TextView
            android:id="@+id/textViewtZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translationZ"
            android:layout_gravity="center"
            android:textSize="12dp"/>
        />


    </LinearLayout>
</LinearLayout>
